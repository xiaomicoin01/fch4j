<configuration>

    <!--定义日志文件的存储地址 勿在 LogBack 的配置中使用相对路径-->
    <property name="LOG_HOME" value="/opt/data/log"/>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %class{36} %L %M - %msg%xEx%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- rollover daily -->
            <fileNamePattern>${LOG_HOME}/block_explorer-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <!--每个日志文件的大小只能为100MB-->
            <maxFileSize>10MB</maxFileSize>
            <!--所有的日志文件总和大小不能超过1GB-->
            <totalSizeCap>200MB</totalSizeCap>
            <!--删除两天以前的日志-->
            <maxHistory>2</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %class{36} %L %M - %msg%xEx%n</pattern>
        </encoder>
    </appender>

    <logger name="org.springframework.orm.jpa" level="ERROR"/>
    <logger name="org.apache.http.impl" level="ERROR"/>
    <logger name="org.apache.http.client.protocol" level="ERROR"/>

    <root level="ERROE">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
    </root>

</configuration>